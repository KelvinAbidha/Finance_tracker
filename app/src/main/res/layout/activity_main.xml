<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F5F7FA">

    <!-- App Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Micro-Debt Tracker"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1E3A8A"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"/>

    <!-- Total Balance Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBalance"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Outstanding"
                android:textSize="16sp"
                android:textColor="#6B7280"/>

            <TextView
                android:id="@+id/tvTotalBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KES 0.00"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#16A34A"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Add Debt Button -->
    <Button
        android:id="@+id/btnAddDebt"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Add New Debt"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#1E3A8A"
        android:textColor="@android:color/white"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardBalance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Debt List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDebts"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnAddDebt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_debt"/>

</androidx.constraintlayout.widget.ConstraintLayout>